        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Name="rHelp" Height="0"  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="253*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
